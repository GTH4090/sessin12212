<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="KhranDesktop.Pages.MainMenu">
    <Grid RowDefinitions="Auto, *, Auto">
        <DataGrid Name="VisitDg" AutoGenerateColumns="False" IsReadOnly="True" Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="FinalDate" Binding="{Binding FinalDate, StringFormat='{}{0:dd/MM/yyyy}'}"/>
                <DataGridTextColumn Header="FinalTime" Binding="{Binding Time}"/>
                <DataGridTextColumn Header="Type" Binding="{Binding Type.Name}"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status.Name}"/>
                <DataGridTextColumn Header="Target" Binding="{Binding Target.Name}"/>
                <DataGridTextColumn Header="Division" Binding="{Binding Employee.Division.Name}"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Name="VisitBtn" Content="Подать заявление на личное посещение" Click="VisitBtn_OnClick"/>
        </StackPanel>
    </Grid>
</UserControl>
